{
	"name": "magma-connect",
	"version": "0.1.1-beta",
	"description": "A smart magamastream plugin to connect nodes based on their region.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"lint": "eslint --ext .ts ./src",
		"ci": "run-s lint build"
	},
	"devDependencies": {
		"@favware/rollup-type-bundler": "^4.0.0",
		"@types/node": "^24.5.1",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"eslint": "^9.35.0",
		"npm-run-all": "^4.1.5",
		"typedoc": "^0.28.13",
		"typedoc-plugin-no-inherit": "^1.4.0",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"tslib": "^2.8.1"
	},
	"peerDependencies": {
		"magmastream": "^2.9.0"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		]
	},
	"keywords": [
		"plugin",
		"magmastream",
		"region",
		"loadbalancing",
		"lavalink"
	],
	"repository": {
		"url": "https://github.com/muralianand12345/magma-connect/tree/main"
	},
	"author": "Murali Anand",
	"license": "Apache-2.0"
}
